---
import { UniQuery } from 'san-webkit-next/api/executor.js'
import { queryMetricsChangelog } from '$modules/changelog/api'
import MetricsList from './MetricsList.svelte'

const PAGE_SIZE = 20
const initialData = await queryMetricsChangelog(UniQuery(fetch))(
  1,
  PAGE_SIZE,
  '',
)
---

<MetricsList client:load {initialData} pageSize={PAGE_SIZE} />
