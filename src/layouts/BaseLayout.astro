---
import '../app.css'
import 'san-webkit-next/app.css'

import { ClientRouter } from 'astro:transitions'
import Notifications from 'san-webkit-next/ui/core/Notifications'

import Nav from '$components/layout/Nav.svelte'
import Seo from '$components/layout/SEO.astro'
import Intercom from '$components/services/Intercom.svelte'
import Tracking from '$components/services/Tracking.svelte'
import Cookies from '$components/services/Cookies.svelte'
import SupportButton from '$components/shared/SupportButton.svelte'

import { cn } from 'san-webkit-next/ui/utils'

type Props = {
  title?: string
  class?: string
}

const {
  class: className = '',
  title = 'Crypto Academy: Learn How to Analyze Cryptocurrency Market',
} = Astro.props
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <Seo {title} />

    <ClientRouter />
  </head>

  <body class={cn('pt-[70px]', className)}>
    <Intercom client:only="svelte" />
    <Tracking client:only="svelte" />
    <Cookies client:only="svelte" />
    <SupportButton client:only="svelte" />
    <Notifications client:only="svelte" />

    <div data-vaul-drawer-wrapper>
      <Nav client:load transition:persist />

      <slot />
    </div>
  </body>
</html>
