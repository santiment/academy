---
import BaseLayout from '../layouts/BaseLayout.astro';
import DocsLayout from '../layouts/DocsLayout.astro';
import { getCollection, getEntry } from 'astro:content';

export async function getStaticPaths() {
  const allDocs = await getCollection('docs'); 
  
  return allDocs.map((doc) => ({
    params: { slug: doc.slug },
  }));
}

const { slug } = Astro.params;

const currentDoc = await getEntry('docs', slug || 'index');

if (!currentDoc) {
  return Astro.redirect('/404');
}

const allDocsEntries = await getCollection('docs');

const allDocs = allDocsEntries.map((entry) => ({
  slug: entry.slug,
  title: entry.data.title ?? entry.slug, 
}));

const { Content } = await currentDoc.render();
---

<BaseLayout>
  <DocsLayout
    items={allDocs}
    currentSlug={currentDoc.slug}
    title={currentDoc.data.title ?? currentDoc.slug}
  >
    <Content />
  </DocsLayout>
</BaseLayout>
