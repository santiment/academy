---
import Svg from 'san-webkit-next/ui/core/Svg'
import Footer from 'san-webkit-next/ui/app/Footer'
import { cn } from 'san-webkit-next/ui/utils'

import Page from '$layouts/Page.astro'

import DomainCard from '$components/features/home/DomainCard.svelte'
import HeroChat from '$components/features/home/HeroChat.svelte'
import ForwardedEmailIcon from '$components/ui/icons/ForwardedEmail.svelte'
import SEO from '$components/layout/SEO.astro'

import turtleDesktopIllustration from '$components/ui/illustrations/turtle-desktop.svg'
import turtleMobileIllustration from '$components/ui/illustrations/turtle-mobile.svg'

import { GUIDES, RESOURCES } from '$config/home'

const bgImage = `url(${turtleDesktopIllustration.src})`
---

<Page>
  <SEO
    slot="seo"
    title="Crypto Academy: Learn How to Analyze Cryptocurrency Market"
  />

  <Fragment>
    <link
      rel="preload"
      href={turtleDesktopIllustration.src}
      as="image"
      media="(min-width: 992px)"
      type="image/svg+xml"
      fetchpriority="high"
    />

    <link
      rel="preload"
      href={turtleMobileIllustration.src}
      as="image"
      media="(max-width: 991px)"
      fetchpriority="high"
    />
  </Fragment>

  <section class="flex flex-col">
    <div class="hero-bg px-5 py-14">
      <img
        src={turtleMobileIllustration.src}
        alt="Turtoshi"
        width="242"
        height="152"
        fetchpriority="high"
        class="mx-auto my-0 mb-6 hidden h-[152px] w-[242px] md:block"
      />

      <h1 class="mb-8 text-center text-3xl text-rhino">
        Hi, I’m Turtoshi — your AI guide to Academy
      </h1>

      <div class="mx-auto max-w-[600px] items-center">
        <HeroChat client:load />
      </div>
    </div>

    <div class="container">
      <section class="mx-auto mb-20 mt-20 sm:mb-0 sm:mt-7">
        <h4 class="mb-8 text-xl text-rhino">Getting started</h4>

        <div
          class="grid w-full grid-cols-3 gap-6 md:grid-cols-2 sm:grid-cols-1"
        >
          <a href="/santiment-introduction/">
            <article
              class={cn(
                'h-full rounded transition-all ease-in-out duration-100 hover:-translate-y-1',
                'bg-green py-8 px-10 sm:py-6 sm:px-5',
              )}
            >
              <h3 class="mb-4 text-lg font-medium text-white">
                Getting Started With Santiment
              </h3>

              <p class="m-0 text-base text-porcelain sm:text-sm">
                Exploring the purpose and benefits of Santiment, this document
                highlights the available hrefols and provides guidance on
                effectively utilizing them.
              </p>
            </article>
          </a>

          <a href="/for-traders/">
            <article
              class={cn(
                'h-full rounded transition-all ease-in-out duration-100 hover:-translate-y-1',
                'bg-rhino py-8 px-10 sm:py-6 sm:px-5',
              )}
            >
              <h3 class="mb-4 text-lg font-medium text-white">For Traders</h3>

              <p class="m-0 text-base text-porcelain sm:text-sm">
                Explanations, tuhrefrials and use cases for Santiment metrics
                and hrefols. Learn how to use our platform to better understand
                market behavior, network activity and stakeholder trends.
              </p>
            </article>
          </a>

          <a href="/for-developers/">
            <article
              class={cn(
                'h-full rounded transition-all ease-in-out duration-100 hover:-translate-y-1',
                'bg-waterloo py-8 px-10 sm:py-6 sm:px-5',
              )}
            >
              <h3 class="mb-4 text-lg font-medium text-white">
                For Developers
              </h3>

              <p class="m-0 text-base text-porcelain sm:text-sm">
                Technical documentation on Santiment metrics and indicahrefrs.
                Understand the calculations, logic and algorithms behind our
                metrics - many of them cushrefm-built by the Santiment Team.
              </p>
            </article>
          </a>
        </div>
      </section>

      <h4 class="mx-0 mb-8 mt-20 text-lg text-rhino sm:mb-5 sm:mt-12">
        Guides
      </h4>

      <div class="grid w-full grid-cols-4 gap-6 md:grid-cols-2 sm:grid-cols-1">
        {
          GUIDES.map(({ title, icon, ...rest }) => (
            <DomainCard {icon} {title} {...rest} />
          ))
        }
      </div>

      <h4 class="mx-0 mb-8 mt-20 text-lg text-rhino sm:mb-5 sm:mt-12">
        Resources
      </h4>

      <div class="grid w-full grid-cols-2 gap-6 md:grid-cols-2 sm:grid-cols-1">
        {
          RESOURCES.map(({ title, ...rest }) => (
            <DomainCard wide {title} {...rest} maxWidth="295px" />
          ))
        }
      </div>

      <section
        class={cn(
          'relative mt-20 flex items-center justify-center rounded bg-athens px-5 py-12 sm:flex-col sm:p-5 xs:mt-[50px]',
          "after:content-[''] after:left-1/2 after:absolute after:block after:w-[1px] after:h-[104px] after:bg-porcelain sm:after:hidden",
        )}
      >
        <a
          href="https://santiment.net/discord"
          target="_blank"
          rel="noopener noreferrer"
          class={cn(
            'mx-7 flex w-full max-w-[458px] items-center rounded px-4 py-6 transition-all duration-100 ease-in-out',
            'group hover:cursor-pointer hover:-translate-y-0.5 hover:bg-white',
          )}
        >
          <div>
            <Svg
              id="discord"
              w={36}
              h={27}
              class="ml-6 mr-4 fill-casper group-hover:fill-rhino"
            />
          </div>
          <div>
            <h3 class="mb-1 text-lg text-rhino">Join our discord!</h3>
            <p class="text-sm text-waterloo">
              Talk directly with the Santiment Team
            </p>
          </div>
        </a>

        <a
          href="https://app.santiment.net/support"
          target="_blank"
          rel="noopener noreferrer"
          class={cn(
            'mx-7 flex w-full max-w-[458px] items-center rounded px-4 py-6 transition-all duration-100 ease-in-out',
            'group hover:cursor-pointer hover:-translate-y-0.5 hover:bg-white',
          )}
        >
          <div>
            <ForwardedEmailIcon
              class="ml-6 mr-4 fill-casper group-hover:fill-rhino"
            />
          </div>
          <div>
            <h3 class="mb-1 text-lg text-rhino">Contact us</h3>
            <p class="text-sm text-waterloo">
              Reach out to us directly via email
            </p>
          </div>
        </a>
      </section>
    </div>
  </section>

  <Footer class="mt-14" client:visible />
</Page>

<style define:vars={{ bgImage }}>
  .hero-bg {
    background-image: var(--bgImage);
    @apply bg-cover bg-bottom bg-no-repeat md:bg-none;
  }
</style>
